// Disable automatic Nextflow update checks
nextflow.enable.checkLatest = false

params {
    // Required parameters
    prefix = ''
    directory = ''

    // Optional parameters with defaults
    outdir = 'results'
    subsample_reads = null

    // Tool paths
    fastp_path = 'fastp'
    seqtk_path = 'seqtk'
    spades_path = 'spades.py'
    diamond_path = 'diamond'

    // SPAdes parameters
    spades_threads = 14
    spades_memory = 120
    spades_k = 'auto'

    // Diamond parameters
    diamond_db = '/home/henning/dbs/nr_diamond_taxonomy.db'
    diamond_threads = 12
    diamond_evalue = '1e-5'
    diamond_max_target_seqs = 1

    // Taxa quantification
    top_n_taxa = 10  // Number of top taxa to display
}
